/**
 * Implementation of hook_elements().
 */
function date_repeat_elements() {
  $type['date_repeat_rrule'] = array(
    '#input' => TRUE,
    '#process' => array('date_repeat_rrule_process' => array()),
    '#validate' => array('date_repeat_rrule_validate' => array()),
  );
  return $type;
}

